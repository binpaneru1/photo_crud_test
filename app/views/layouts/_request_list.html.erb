<li class="nav-item dropdown" id="friend-list" >
          <a class="nav-link text-light" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
           <i class="fas fa-user-plus" style="font-size: 30px;" title="Friend Request"><span class="badge badge-light" style="background-color: red;"><%= @requests.count %></span></i>
         </a>
         <ul class="dropdown-menu">
           <% @requests.each do |request| %>
           <li class="notification-box" id="req-<%= request.id%>">
            <div class="row">
              <div class="col-lg-3 col-sm-3 col-3 text-center" style="margin-top: 20px; margin-left: 20px; ">
                <%= image_tag("cover.jpg", style: "width:70px; height:70px; border-radius:50%;", alt: "profile-img") %>
              </div>    
              <div class="col-lg-8 col-sm-8 col-8">
                <strong class="text-info">Request From <%= request.user.name %></strong>
                <div class="button-request">
                  <%= link_to "Accept", response_request_path(:id => request.id), class: "button button-green" %>
                  <%= link_to "Decline", decline_request_path(:id => request.id),remote: true, class: "button button-red" %>
                </div>
                <small class="text-warning"><%= request.created_at %></small>
              </div>    
            </div>
          </li>
          <% end %>
          <li class="footer bg-dark text-center">
            <a href="" class="text-light">View All</a>
          </li>
          </ul>
        </li>