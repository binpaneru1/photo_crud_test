<div class="row">
  <div class="col-d-12">
  <%= form_with  html: {multipart: true} do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description , class: "form-control"%>
    </div>
    <div class="form-group">
      <%= f.label :image %>
      <%= f.file_field :image, multiple: true, class: "form-control-file", name: "image[]", id: "images", onchange: "preview_images()" %>
    </div>
    <div class="row" id="image_preview">  </div>
    <%= f.submit :submit ,class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<form>
  <div class="form-group">
    <input type="text" class="form-control" id="title" placeholder="Title">
  </div>
  

  <div class="form-group">
    <textarea class="form-control" id="description" rows="3" placeholder="Whats on your mind!"></textarea>
  </div>

  <button type="submit" class="btn btn-primary">Post</button>
</form>